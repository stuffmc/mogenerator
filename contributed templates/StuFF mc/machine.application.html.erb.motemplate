<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
<div id="menu">    	<table>
    	<tr>
     <td>| <$foreach Entity entitiesByName do$><$ if Entity.hasSpecificCustomClass 
		$><%= link_to t('<$Entity.name.underscorize$>', :count => 2), <$Entity.name.pluralize.underscorize$>_path %> [<%= link_to "+", new_<$
			Entity.name.underscorize$>_path %>]</td><td> | <$ endif $><$endforeach do$></td>
    	</tr>
    	</table></div>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
